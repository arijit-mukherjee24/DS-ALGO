		int count[] = new int[max+1];
		int output[] = new int[n];
		
		for(int i= 0; i< n; i++) {
			
		}
	}

	// Prints the array
	void printArray(int[] arr) {
		for (int i : arr)
			System.out.print(i + " ");
	}

}
